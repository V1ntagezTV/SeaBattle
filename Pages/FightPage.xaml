<Page x:Class="WarShips.Pages.FightPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WarShips.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="400"
      Title="FightPage">

    <Grid>
        <TextBlock TextAlignment="Center" Height="20" Width="130" HorizontalAlignment="Left" Margin="35,0,0,220">Ваше поле!</TextBlock>
        <TextBlock TextAlignment="Center" Height="20" Width="130" Margin="0,0,35,220" HorizontalAlignment="Right">Поле противника!</TextBlock>
        <Grid 
            Name="g_myMap"
            Background="LightCyan"
            Margin="10" 
            Height="180"
            Width="180"
            HorizontalAlignment="Left">
            <Border BorderThickness="3" BorderBrush="Black"/>
        </Grid>

        <Grid 
            x:Name="g_enemyMap"
            Margin="10"
            Background="LightGray" 
            Height="180" Width="180" 
            HorizontalAlignment="Right">
            <Border BorderThickness="3" BorderBrush="Black"/>
        </Grid>
    </Grid>
</Page>
