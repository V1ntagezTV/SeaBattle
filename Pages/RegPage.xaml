<Page x:Class="WarShips.Pages.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WarShips.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="400"
      Title="RegPage">

    <Grid>
        <TextBlock Height="70" TextAlignment="Center" Margin="0,0,0,200"
                   FontSize="40">SEA BATTLE</TextBlock>
        <TextBox x:Name="tb_nickname" Height="20" Width="110" PreviewMouseUp="Tb_nickname_MouseEnter">Введите никнейм!</TextBox>
        <Button x:Name="b_start" Click="B_start_Click" Height="20" Width="55" VerticalAlignment="Top" Margin="0,230,0,0">Start!</Button>
    </Grid>
</Page>
